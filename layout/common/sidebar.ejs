<div id="sidebar">
    <%- partial('common/toc') %>
    <div id="actions">
          <ul>
            <li><a class="action"  href="/">首页</a></li>
            <br>
            <% if (page.prev) { %>
            <li><a class="action" href="<%- url_for(page.prev.path) %>" title="<%- page.prev.title %>">上一篇 : <%- page.prev.title %></a></li>
            <% } %>
            <% if (page.next) { %>
            <li><a class="action" href="<%- url_for(page.next.path) %>" title="<%- page.next.title %>">下一篇 : <%- page.next.title %></a></li>
            <% } %>
            <br>
            <li><span class="action" onclick="window.scrollTo({ top: 0, behavior: 'smooth' });">回到顶部</span></li>
          </ul>
    </div>
</div>
